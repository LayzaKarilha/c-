#include <stdio.h> //calculadora simples
double soma(double n1, double n2);
double sub(double n1, double n2);
double mul(double n1, double n2);
double div(double n1, double n2);
double med(double n1, double n2);

int main(){
	double valor1, valor2;
	char op;
	printf("escolha uma operacao: \n+ adicao\n- subtracao\n /divisao\n* multiplicacao\n ! media\n");
	scanf("%c",&op);
	printf("digite o primeiro numero: ");
	scanf("%lf", &valor1);
		printf("digite o segundo numero: ");
	scanf("%lf", &valor2);
	switch(op){
		case'+':
			printf ("%lf + %lf = %lf", valor1,valor2,(valor1+valor2));
			break;
				case'-':
			printf ("%lf - %lf = %lf", valor1,valor2,(valor1-valor2));
			break;
				case'*':
			printf ("%lf * %lf = %lf", valor1,valor2,(valor1*valor2));
			break;
				case'/':
			printf ("%lf / %lf = %lf", valor1,valor2,(valor1/valor2));
			break;
				case'!':
			printf ("%lf * %lf /2 = %lf", valor1,valor2,(valor1*valor2 /2));
			
			break;
			
		}
			return 0;
	}
